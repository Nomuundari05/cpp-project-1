{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run C++ Program",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/src/main",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,  // Output will appear in the Debug Console
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build"  // This must match the label in tasks.json
      }
    ]
  }